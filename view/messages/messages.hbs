<!-- Content Header (Page header) -->

<section class="content-header" style="color: ghostwhite">
    <h1>
        Messages
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" style="color: ghostwhite"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active" style="color: ghostwhite"><a href="#" style="color: ghostwhite">Messages</a></li>
    </ol>
    <p>
    </p>
</section>
<!-- Main content -->


<div class="col-md-5">
    <!-- USERS LIST -->
    <div class="box box-danger">
        <div class="box-header with-border" style="background-color: #2c3b41; border-top-color: #2c3b41;">
            <h3 class="box-title" style="color: #fff">Connections</h3>

            <div class="box-tools pull-right">
                {{#Users}}
                    <span class="label label-danger" style="color: #fff">New Members</span>
                {{/Users}}
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding chat" id="chat-box" style="background-color: #2c3b41; border-top-color: #2c3b41;">
            <ul class="users-list clearfix">
                {{#friends}}
                    <li>
                        <a class="users-list-name" onclick="carbon.startApplication('/Messages/{{user_id}}/', '#direct-chat')" style="color:#fff;">
                            <img style="min-height: 60px; max-height: 60px" src="{{user_profile_pic}}{{^user_profile_pic}}/view/img/Carbon-red.png{{/user_profile_pic}}" class="img-circle" alt="User Image" width="60em" height="60em"><br>
                            {{user_first_name}} {{user_last_name}}
                            <span class="users-list-date">{{user_last_login}}</span>
                        </a>
                    </li>
                {{/friends}}
            </ul>
            <!-- /.users-list -->
        </div>
        <!-- /.box-footer -->
    </div>
    <!--/.box -->
    {{^friends}}
        <div class="alert alert-warning">
            <h4><i class="icon fa fa-warning"></i> You have no connections yet!</h4>
            Start Connecting Now.
        </div>
    {{/friends}}

</div>

<div class="col-md-7">
    <div id="direct-chat" class="box box-success direct-chat direct-chat-success" style="font-size: 200%; color: #ffffff; background-color: #2c3b41; border-top-color: #2c3b41;">
        <div class="box-header with-border" style="background-color: #2c3b41; border-top-color: #2c3b41;">
            <h3 class="box-title">Direct Chat</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body" style="background-color: #2c3b41; border-top-color: #2c3b41;">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages">
                <!-- /.direct-chat-msg -->
            </div>
            <!--/.direct-chat-messages-->
            <!-- /.direct-chat-pane -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer" style="background-color: #2c3b41; border-top-color: #2c3b41;">
            <form action="#" method="post">
                <div class="input-group">
                    <input type="text" name="message" placeholder="Type Message ..." class="form-control">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-success btn-flat">Send</button>
                      </span>
                </div>
            </form>
        </div>
        <!-- /.box-footer-->
        <div class="overlay">
            <i class="fa fa-refresh fa-spin"></i>
        </div>
    </div>
</div>