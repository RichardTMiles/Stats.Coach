<!-- Content Header (Page header) -->

<section class="content-header" style="color: ghostwhite">
    <h1>
        Followers
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" style="color: ghostwhite"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active" style="color: ghostwhite"><a href="#" style="color: ghostwhite">Messages</a></li>
    </ol>
    <p>
    </p>
</section>
<!-- Main content -->


<div class="col-md-12">
    <!-- USERS LIST -->
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Connections</h3>

            <div class="box-tools pull-right">
                {{#Users}}
                    <span class="label label-danger">New Members</span>
                {{/Users}}
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding chat" id="chat-box">
            <ul class="users-list clearfix">
                {{#followers}}
                    <li>
                        <a class="users-list-name" href="/Profile/{{user_id}}/">
                            <img style="min-height: 60px; max-height: 60px" src="{{user_profile_pic}}{{^user_profile_pic}}/view/img/Carbon-red.png{{/user_profile_pic}}" class="img-circle" alt="User Image" width="60em" height="60em"><br>
                            {{user_first_name}} {{user_last_name}}
                            <span class="users-list-date">{{user_last_login}}</span>
                        </a>
                    </li>
                {{/followers}}
            </ul>
            <!-- /.users-list -->
        </div>
        <!-- /.box-footer -->
    </div>
</div>
