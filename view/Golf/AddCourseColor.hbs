<script>
    Carbon(() => {
        $('#datepicker').load_datepicker();
        $('.knob').load_knob();                // were pre loading
        $('.timepicker').load_timepicker();
        $("[data-mask]").load_inputmask();
        $(".select2").load_select2();

        let tee_box_colors = [];

        carbon.hasDuplicates = (array) => {
            return (new Set(array)).size !== array.length;
        };

        carbon.addColor = (self) => {
            $('#color').attr('value', self.innerHTML).attr("style", "background-color: " + self.innerHTML + ";")
        };

        carbon.alert("Tee boxes difficulty and slope may be left at 0 if not set.", "success");

    });
</script>


